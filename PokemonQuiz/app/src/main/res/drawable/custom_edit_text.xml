<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/colorBlue500" />
            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="10dp"
                android:bottom="10dp" />
            <corners android:radius="20dp" />
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="@color/colorGrey600" />
            <corners android:radius="20dp" />
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>
</selector>