<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:text="MSG"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:id="@+id/txtMsg"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtMsg"
        android:background="@color/colorGrey200"
        android:id="@+id/viewLine1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLine1"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearButtonDialog">

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="YES"
            android:textSize="20sp"
            android:textColor="@color/colorGreen700"
            android:background="@drawable/custom_button_dialog"
            android:id="@+id/btnYesDialog"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGrey200"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="NO"
            android:textSize="20sp"
            android:background="@drawable/custom_button_dialog"
            android:id="@+id/btnNoDialog"
            />

    </LinearLayout>

</RelativeLayout>